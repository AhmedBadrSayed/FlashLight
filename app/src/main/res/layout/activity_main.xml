<RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
     android:background="@drawable/pattern"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<ImageButton
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/flash_light"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/flash"
    />
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/flash_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flash Light"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
    <LinearLayout
        android:id="@+id/lin"
        android:layout_marginTop="60dp"
        android:weightSum="2"
        android:layout_below="@+id/flash_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_margin="20dp"
            android:id="@+id/vibrate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/vibrate"
            />
        <ImageButton
            android:layout_margin="20dp"
            android:id="@+id/white_screen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/phone"
            />
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_below="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SOS"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="White Screen"
            android:textSize="18sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/adlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>